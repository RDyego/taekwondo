<div class="container">
	<div class="card center">
		<form action="/session/create" method="post" class="col s12">
			<h2 class="form-signin-heading">Please sign in...</h2>
			
			<% if(flash && flash.err) { %>
				<ul class="alert alert-success">
			<% Object.keys(flash.err).forEach(function(error) { %>
				<li><%- JSON.stringify(flash.err[error])  %></li>	
			<% }) %>	
				</ul>
			<% } %>
			<div class="row">
				<div class="input-field col s12">
					<input id="email" name="email" type="email" class="validate">
					<label for="email" data-error="Invalid Email..." data-success="Ok...">Email</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="password" name="password" type="password" class="validate">
					<label for="password" data-error="Invalid Password..." data-success="Ok...">Password</label>
				</div>
			</div>
			<div class="row">
				<button class="btn waves-effect waves-light" type="submit" name="action">Sign-in
					<i class="material-icons">send</i>
				</button>
			</div>
			<input type="hidden" name="_csrf" value="<%=_csrf%>">
		</form>
	</div>
</div>