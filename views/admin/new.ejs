<div class="container">
	<div class="card center">
		<form action="/admin/create" method="post" class="col s12">
			<div class="row">
				<div class="input-field col s12">
					<input id="name" name="name" type="text" class="validate">
					<label for="name" data-error="Invalid Name..." data-success="Ok...">Name</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="email" name="email" type="email" class="validate">
					<label for="email" data-error="Invalid Email..." data-success="Ok...">Email</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="password" name="password" type="password" class="validate">
					<label for="password" data-error="Invalid Password..." data-success="Ok...">Password</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="confirmation" name="confirmation" type="password" class="validate">
					<label for="confirmation" data-error="Invalid Pass confirmation..." data-success="Ok...">Pass confirmation</label>
				</div>
			</div>
			<div class="row">
				<button class="btn waves-effect waves-light" type="submit" name="action">Submit
					<i class="material-icons">send</i>
				</button>
			</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>">
		</form>
	</div>
</div>