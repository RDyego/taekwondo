<div class="container">
	<div class="center">
		<form action="/user/create" method="post" class="col s12">
			<div class="row">
				<div class="input-field col s6">
					<input id="name" name="name" type="text" class="validate" maxlength="50">
					<label for="name" data-error="<%=i18n('Invalid')%>" data-success="<%=i18n('Ok')%>"><%=i18n('Name')%></label>
				</div>
				<div class="input-field col s6">
					<input id="email" name="email" type="email" class="validate" maxlength="50">
					<label for="email" data-error="<%=i18n('Invalid')%>" data-success="<%=i18n('Ok')%>"><%=i18n('Email')%></label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="password" name="password" type="password" class="validate">
					<label for="name" data-error="<%=i18n('Invalid')%>" data-success="<%=i18n('Ok')%>"><%=i18n('Password')%></label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="confirmation" name="confirmation" type="password" class="validate">
					<label for="email" data-error="<%=i18n('Invalid')%>" data-success="<%=i18n('Ok')%>"><%=i18n('Password Confirmation')%></label>
				</div>
			</div>
			<div class="row">
				<button class="btn waves-effect waves-light" type="submit" name="action">Submit
					<i class="material-icons">send</i>
				</button>
			</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>">
		</form>
	</div>
</div>