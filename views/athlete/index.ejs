<div class="container">
	<table class="center bordered hoverable responsive-table" align=center>
		<thead>
			<tr>
				<th data-field="name">Name</th>
				<th data-field="email">Email</th>
				<th data-field="graduation">Graduation</th>
				<th data-field="instructorName">Instructor</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% _.each(athletes, function (athlete) { %>
				<tr>
					<td>
						<%=athlete.name %>
					</td>
					<td>
						<%=athlete.email %>
					</td>
					<td>
						<%=athlete.graduation %>
					</td>
					<td>
						<%=athlete.instructorName %>
					</td>
					<td>
						<a href="/athlete/show/<%=athlete.id%>" class="btn-floating waves-effect waves-light green">
							<i class="material-icons">search</i>
						</a>
					</td>
					<td>
						<a href="/athlete/edit/<%=athlete.id%>" class="btn-floating waves-effect waves-light blue">
							<i class="material-icons">create</i>
						</a>
					</td>
					<td>
  						<a class="btn-floating waves-effect waves-light red modal-trigger" href="#modalDeleteAthlete"
							  data-action="/athlete/destroy/<%=athlete.id%>"
							  data-form="#formDeleteAthlete">
							<i class="material-icons">clear</i>
					 	</a>
					</td>
				</tr>
				<% }) %>
		</tbody>
	</table>
	<div class="row">
		<% include ../../assets/templates/paginate %>
	</div>
</div>

<div id="modalDeleteAthlete" class="modal">
	<form id="formDeleteAthlete" action="" method="POST">
		<input type="hidden" name="_method" value="delete" />
		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		<div class="modal-content">
			<h4>Modal Header</h4>
			<p>A bunch of text</p>
		</div>
		<div class="modal-footer">
			<button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" name="action">
				Delete
			</button>
			<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
		</div>
	</form>
</div>